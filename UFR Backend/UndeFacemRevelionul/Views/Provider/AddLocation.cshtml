@model UndeFacemRevelionul.ViewModels.AddLocationViewModel

<h2>Add Location</h2>

<form asp-action="AddLocation" method="post" onsubmit="showLoading()">
    <input type="hidden" asp-for="ProviderId" value="@ViewBag.ProviderId" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" asp-for="Address" required />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price" required />
    </div>

    <div class="form-group">
        <label for="Capacity">Capacity</label>
        <input type="number" class="form-control" asp-for="Capacity" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" required></textarea>
    </div>

    <div class="form-group">
        <label for="Rating">Rating</label>
        <input type="number" class="form-control" asp-for="Rating" required />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

