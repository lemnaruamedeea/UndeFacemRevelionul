@model UndeFacemRevelionul.ViewModels.AddMenuViewModel

<h2>Add Menu</h2>

<form asp-action="AddMenu" method="post">
    <input type="hidden" asp-for="ProviderId" value="@ViewBag.ProviderId" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name" required />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" class="form-control" asp-for="Price" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" required></textarea>
    </div>

    <div class="form-group">
        <label for="Rating">Rating</label>
        <input type="number" class="form-control" asp-for="Rating" required />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>