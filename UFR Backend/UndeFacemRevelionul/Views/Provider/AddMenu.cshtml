@model UndeFacemRevelionul.Models.FoodMenuModel

@{
    ViewData["Title"] = "Add New Menu";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddMenu" method="post">
    <input type="hidden" asp-for="ProviderId" />

    <div class="form-group">
        <label for="Name">Menu Name</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" asp-for="Price" class="form-control" required />
    </div>

    <!-- Câmpul pentru a încărca fișierul meniului -->
    <div class="form-group">
        <label for="MenuFilePath">Menu File</label>
        <input type="file" asp-for="MenuFilePath" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Menu</button>
</form>
