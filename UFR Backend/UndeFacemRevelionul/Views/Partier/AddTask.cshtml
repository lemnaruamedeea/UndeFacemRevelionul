@model UndeFacemRevelionul.Models.TaskModel

@{
    ViewBag.Title = "Add Task";
}

<h1>Add Task</h1>

<form asp-action="AddTask" method="post">
    <input type="hidden" name="partyId" value="@ViewBag.PartyId" />
    <input type="hidden" name="Party" value="@{new PartyModel();}" />

    <div class="form-group">
        <label asp-for="Name">Task Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter task name" />
    </div>

    <div class="form-group">
        <label asp-for="Points">Points</label>
        <input asp-for="Points" class="form-control" type="number" placeholder="Enter points" />
    </div>

    <div class="form-group">
        <label asp-for="IsCompleted">Is Completed?</label>
        <input asp-for="IsCompleted" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-success">Add Task</button>
    <a asp-action="PartyTasks" asp-route-id="@ViewBag.PartyId" class="btn btn-secondary">Back to Tasks</a>
</form>
