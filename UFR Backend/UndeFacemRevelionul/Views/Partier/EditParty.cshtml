@model UndeFacemRevelionul.Models.PartyModel

<h2>Editează Petrecerea</h2>

<form asp-action="EditParty" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TotalBudget"></label>
        <input asp-for="TotalBudget" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RemainingBudget"></label>
        <input asp-for="RemainingBudget" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvează</button>
</form>
