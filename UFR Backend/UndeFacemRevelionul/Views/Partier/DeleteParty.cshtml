@model UndeFacemRevelionul.Models.PartyModel

<h2>Șterge Petrecerea</h2>

<p>Ești sigur că vrei să ștergi această petrecere?</p>
<ul>
    <li><strong>Nume:</strong> @Model.Name</li>
    <li><strong>Dată:</strong> @Model.Date.ToString("d")</li>
</ul>

<form asp-action="DeletePartyConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Șterge</button>
    <a href="@Url.Action("PartyDetails", "Partier", new { id = Model.Id })" class="btn btn-secondary">Anulează</a>
</form>
