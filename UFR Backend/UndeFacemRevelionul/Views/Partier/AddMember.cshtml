@{
    ViewData["Title"] = "Adaugă Membru";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* General body and background */
        body {
            background: linear-gradient(to right, #ff99cc, #cc66ff, #9900cc);
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center; /* Aliniere pe verticală și orizontală */
            min-height: 100vh;
            margin: 0;
            padding: 0;
            color: white;
            flex-direction: column;
        }

        /* Navbar styles */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(to right, #660066, #4d004d);
            padding: 15px 0;
            text-align: center;
            box-shadow: none;
            z-index: 1000;
            font-family: 'Arial', sans-serif;
        }

            .navbar a {
                color: white;
                font-size: 1.6rem;
                text-decoration: none;
                font-weight: bold;
                margin: 0 20px;
            }

            .navbar .nav-buttons {
                position: absolute;
                right: 20px;
                top: 50%;
                transform: translateY(-50%);
            }

                .navbar .nav-buttons a {
                    margin-left: 10px;
                    padding: 12px 30px;
                    background: linear-gradient(to right, #ff66b2, #9900cc);
                    color: white;
                    border-radius: 25px;
                    text-decoration: none;
                    font-size: 1.4rem;
                    font-weight: bold;
                    transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
                }

                    .navbar .nav-buttons a:hover {
                        transform: scale(1.05);
                        background: linear-gradient(to right, #9900cc, #ff66b2);
                    }


        /* Form container styles */
        .form-container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            width: 100%;
            margin-top: 60px; /* Reduce space at top to center more efficiently */
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: #9900cc;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
            width: 100%; /* Ensure inputs are not overflowing */
        }

            .form-group label {
                font-size: 1.1rem;
                font-weight: bold;
                color: #4d004d;
                display: block;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                font-size: 1rem;
                border-radius: 10px;
                border: 2px solid #cc66ff;
                background-color: #f9f9f9;
                color: #4d004d;
                outline: none;
                transition: all 0.3s ease;
            }

                .form-group input:focus {
                    border-color: #9900cc;
                    background-color: #ffffff;
                }

        /* Button styles */
        .btn-primary {
            background: linear-gradient(to right, #ff66b2, #9900cc);
            color: white;
            padding: 12px 30px;
            font-size: 1.4rem;
            border-radius: 25px;
            border: none;
            cursor: pointer;
            transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
            display: inline-block;
            margin-top: 20px;
        }

            .btn-primary:hover {
                transform: scale(1.05);
                background: linear-gradient(to right, #9900cc, #ff66b2);
            }

        .btn-secondary {
            background: #4d004d;
            color: white;
            padding: 12px 30px;
            font-size: 1.4rem;
            border-radius: 25px;
            text-decoration: none;
            transition: transform 0.3s ease-in-out;
        }

            .btn-secondary:hover {
                transform: scale(1.05);
                background: #9900cc;
            }

        .btn-logout {
            background: linear-gradient(to right, #ff66b2, #9900cc);
            color: white;
            padding: 12px 30px;
            font-size: 1.4rem;
            border-radius: 25px;
            border: none;
            cursor: pointer;
            transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
            display: inline-block;
            margin-top: 20px;
        }

            .btn-logout:hover {
                transform: scale(1.05);
                background: linear-gradient(to right, #9900cc, #ff66b2);
            }

        /* Success and Error messages */
        .alert {
            padding: 15px;
            border-radius: 5px;
            margin-top: 20px;
            text-align: center;
        }

        .alert-success {
            background-color: #4CAF50;
            color: white;
        }

        .alert-danger {
            background-color: #f44336;
            color: white;
        }

    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <a href="@Url.Action("Index", "Dashboard")" class="navbar-title">Unde Facem Revelionul?</a>
        <div class="nav-buttons">

            <form asp-action="Logout" asp-controller="Account" method="post" style="display: inline;">
                <button type="submit" class="btn-logout">Logout</button>
            </form>
        </div>
    </div>

    <!-- Form container -->
    <div class="form-container">
        <h1>Add member to @ViewBag.PartyName</h1>

        <!-- Display success and error messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <!-- Add Member Form -->
        <form asp-action="AddMember" method="post" onsubmit="showLoading()">
            <input type="hidden" name="partyId" value="@ViewBag.PartyId" />
            <div class="form-group">
                <label for="email">Member email</label>
                <input type="email" name="email" class="form-control" required placeholder="Input member email address" />
            </div>
            <button type="submit" class="btn btn-primary">Add member</button>
        </form>

        <!-- Back button -->
        <a href="@Url.Action("PartyDetails", "Partier", new { id = ViewBag.PartyId })" class="btn btn-secondary mt-3">Back</a>

    </div>

</body>
</html>