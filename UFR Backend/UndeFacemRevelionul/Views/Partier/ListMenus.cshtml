@using UndeFacemRevelionul.ViewModels

<h2>Selectează un Meniu</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nume</th>
            <th>Descriere</th>
            <th>Preț</th>
            <th>Rating</th>
            <th>Furnizor</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model.Menus)
        {
            <tr>
                <td>@menu.Name</td>
                <td>@menu.Description</td>
                <td>@menu.Price</td>
                <td>@menu.Rating</td>
                <td>@menu.Provider?.User?.Name ?? "Fără furnizor"</td>
                <td>
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#menuModal"
                            data-id="@menu.Id"
                            data-name="@menu.Name"
                            data-price="@menu.Price"
                            data-description="@menu.Description"
                            data-rating="@menu.Rating"
                            data-provider="@menu.Provider?.User?.Name ?? " Fără furnizor"">
                        Detalii
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal pentru afișarea detaliilor meniului -->
<div class="modal fade" id="menuModal" tabindex="-1" aria-labelledby="menuModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="menuModalLabel">Detalii Meniu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h4 id="menuName"></h4>
                <p><strong>Descriere:</strong> <span id="menuDescription"></span></p>
                <p><strong>Preț:</strong> <span id="menuPrice"></span></p>
                <p><strong>Rating:</strong> <span id="menuRating"></span></p>
                <p><strong>Furnizor:</strong> <span id="menuProvider"></span></p>
            </div>
            <div class="modal-footer">
                <form asp-action="AddMenuToParty" method="post">
                    <input type="hidden" name="partyId" value="@Model.PartyId" />
                    <input type="hidden" name="menuId" id="menuId" />
                    <button type="submit" class="btn btn-success">Adaugă la Petrecere</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script pentru a popula modalul cu detalii despre meniu
        var menuModal = document.getElementById('menuModal');
        menuModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');
            var price = button.getAttribute('data-price');
            var description = button.getAttribute('data-description');
            var rating = button.getAttribute('data-rating');
            var provider = button.getAttribute('data-provider');

            document.getElementById('menuName').innerText = name;
            document.getElementById('menuDescription').innerText = description;
            document.getElementById('menuPrice').innerText = price;
            document.getElementById('menuRating').innerText = rating;
            document.getElementById('menuProvider').innerText = provider;
            document.getElementById('menuId').value = id;
        });
    </script>
}
