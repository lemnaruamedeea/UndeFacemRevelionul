@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Bara de navigație - mai închisă, text centrat și font adaptat */
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: linear-gradient(to right, #660066, #4d004d);
        padding: 15px 0;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        z-index: 1000;
        font-family: 'Arial', sans-serif; /* Font similar cu cel folosit pentru restul paginii */
    }

        .navbar a {
            color: white;
            font-size: 1.6rem;
            text-decoration: none;
            font-weight: bold;
            margin: 0 20px; /* Adăugat margină pentru distanțare între butoane */
        }

        .navbar .nav-buttons {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
        }

            /* Butoane Login și Register, stilizate identic cu butonul "Începe acum!" */
            .navbar .nav-buttons a {
                margin-left: 10px;
                padding: 12px 30px;
                background: linear-gradient(to right, #ff66b2, #9900cc);
                color: white;
                border-radius: 25px;
                text-decoration: none;
                font-size: 1.4rem; /* Mărimea textului ajustată la fel ca "Începe acum!" */
                font-weight: bold; /* Grosimea textului ajustată la fel ca "Începe acum!" */
                transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
            }

                .navbar .nav-buttons a:hover {
                    transform: scale(1.05);
                    background: linear-gradient(to right, #9900cc, #ff66b2);
                }

    /* Stil pentru titlu cu gradient */
    .gradient-text {
        background: linear-gradient(to right, #ff66b2, #9900cc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 2.8rem;
        font-weight: bold;
    }

    /* Container central */
    .home-container {
        max-width: 800px;
        margin: auto;
        padding: 80px 20px 50px; /* Adăugat padding top pentru a nu fi acoperit de navbar */
        text-align: center;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    /* Buton stilizat */
    .btn-custom {
        background: linear-gradient(to right, #ff66b2, #9900cc);
        color: white;
        font-size: 1.4rem; /* Mărimea textului ajustată pentru a fi uniform cu restul butoanelor */
        padding: 12px 30px;
        border-radius: 25px;
        border: none;
        cursor: pointer;
        transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
    }

        .btn-custom:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #9900cc, #ff66b2);
        }

    /* Fundal roz-mov */
    body {
        background: linear-gradient(to right, #ff99cc, #cc66ff, #9900cc);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: Arial, sans-serif;
        flex-direction: column;
    }

