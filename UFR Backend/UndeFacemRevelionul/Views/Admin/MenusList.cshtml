@{
    ViewData["Title"] = "Menus List";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Stiluri globale */
        body {
            background: linear-gradient(to right, #ff99cc, #cc66ff, #9900cc);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            font-family: Arial, sans-serif;
            flex-direction: column;
            padding-top: 80px;
        }

        /* Bara de navigație */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(to right, #660066, #4d004d);
            padding: 15px 0;
            text-align: center;
            box-shadow: none;
            z-index: 1000;
            font-family: 'Arial', sans-serif;
        }

        .navbar a {
            color: white;
            font-size: 1.6rem;
            text-decoration: none;
            font-weight: bold;
            margin: 0 20px;
        }

        .navbar .nav-buttons {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            justify-content: flex-start; /* Aliniază butoanele pe orizontală */
        }

        .navbar .nav-buttons a {
            margin-left: 10px;
            padding: 12px 30px;
            background: linear-gradient(to right, #ff66b2, #9900cc);
            color: white;
            border-radius: 25px;
            text-decoration: none;
            font-size: 1.4rem;
            font-weight: bold;
            transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
            height: 50px; /* Înălțimea fixă pentru ambele butoane */
            width: 300px; /* Lățimea crescută pentru a permite textului să încapă complet */
            display: flex; /* Flexbox pentru alinierea textului */
            justify-content: center; /* Centrează textul pe orizontală */
            align-items: center; /* Centrează textul pe verticală */
            word-wrap: break-word; /* Permite textului să se împartă pe mai multe rânduri */
            margin-top: 12px; /* Adaugă o margine sus pentru a-l muta mai jos */
        }

        .navbar .nav-buttons form {
            margin-left: 10px;
        }

        .navbar .nav-buttons a:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #9900cc, #ff66b2);
        }

        .navbar .nav-buttons form button {
            font-weight: bold;
            font-size: 1.4rem;
            padding: 12px 30px;
            border-radius: 25px;
            border: none;
            background: linear-gradient(to right, #ff66b2, #9900cc);
            color: white;
            transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
            height: 50px; /* Înălțimea fixă pentru ambele butoane */
            width: 220px; /* Lățimea fixă pentru ambele butoane */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .navbar .nav-buttons form button:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #9900cc, #ff66b2);
        }

        /* Stiluri pentru text cu gradient */
        .gradient-text {
            background: linear-gradient(to right, #ff66b2, #9900cc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2.8rem;
            font-weight: bold;
        }

        /* Containerul principal pentru pagina de meniuri */
        .dashboard-container {
            max-width: 900px;
            margin: 100px auto 50px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        /* Stiluri pentru butoane generice */
        .btn-primary, .btn-danger, .btn-success {
            background: linear-gradient(to right, #ff66b2, #9900cc);
            color: white;
            font-size: 1.2rem;
            padding: 8px 20px;
            border-radius: 20px;
            border: none;
            cursor: pointer;
            margin: 8px 0;
            transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
        }

        .btn-primary:hover, .btn-danger:hover, .btn-success:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #9900cc, #ff66b2);
        }

        /* Buton pentru navigare secundară */
        .btn-secondary {
            background: linear-gradient(to right, #ff66b2, #9900cc);
            color: white;
            font-size: 1.4rem;
            padding: 12px 30px;
            border-radius: 25px;
            border: none;
            cursor: pointer;
            transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
            text-decoration: none;
        }

        .btn-secondary:hover {
            transform: scale(1.05);
            background: linear-gradient(to right, #9900cc, #ff66b2);
        }

        /* Stilizare tabel */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 50px;
        }

        .table th, .table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .table th {
            background: linear-gradient(to right, #ff66b2, #9900cc);
            color: white;
            font-size: 1.2rem;
        }

        .table td {
            background: rgba(255, 255, 255, 0.8);
            color: #4d004d;
            font-size: 1rem;
        }

        .table tr:hover {
            background-color: #f3e6f9;
        }

    </style>
</head>
<body>
    <!-- Bara de navigație -->
    <div class="navbar">
        <a href="/">Unde Facem Revelionul?</a>
        <div class="nav-buttons">
            <a href="@Url.Action("Dashboard", "Admin")" class="btn-secondary">Back to Dashboard</a>
            <form asp-action="Logout" asp-controller="Account" method="post" style="display:inline;">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </div>

    <div class="container">
        <h2>Menus List</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Provider</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var menu in Model)
                {
                    <tr>
                        <td>@menu.Id</td>
                        <td>@menu.Name</td>
                        <td>@(menu.Provider?.Name ?? "N/A")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
