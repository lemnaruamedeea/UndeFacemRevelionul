@{
    ViewData["Title"] = "Admin Dashboard";
    var userName = User.Identity.Name;  // Numele utilizatorului logat
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Stiluri pentru pagina de dashboard */

        /* Bara de navigație */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(to right, #660066, #4d004d);
            padding: 15px 0;
            text-align: center;
            box-shadow: none;
            z-index: 1000;
            font-family: 'Arial', sans-serif;
        }

            .navbar a {
                color: white;
                font-size: 1.6rem;
                text-decoration: none;
                font-weight: bold;
                margin: 0 20px;
            }

            /* Modifică stilul butoanelor pentru a le face mai atractive */
            .navbar .nav-buttons {
                position: absolute;
                right: 20px;
                top: 50%;
                transform: translateY(-50%);
            }

                .navbar .nav-buttons a {
                    margin-left: 10px;
                    padding: 12px 30px;
                    background: linear-gradient(to right, #ff66b2, #9900cc);
                    color: white;
                    border-radius: 25px;
                    text-decoration: none;
                    font-size: 1.4rem;
                    font-weight: bold;
                    transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
                }

                    .navbar .nav-buttons a:hover {
                        transform: scale(1.05);
                        background: linear-gradient(to right, #9900cc, #ff66b2);
                    }

        /* Titlu cu gradient */
        .gradient-text {
            background: linear-gradient(to right, #ff66b2, #9900cc);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-size: 2.8rem;
            font-weight: bold;
        }

        /* Container pentru conținut */
        .dashboard-container {
            max-width: 900px;
            margin: auto;
            padding: 80px 20px 50px;
            text-align: center;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Butoane personalizate */
        .btn-primary {
            background: linear-gradient(to right, #ff66b2, #9900cc);
            color: white;
            font-size: 1.4rem;
            padding: 12px 30px;
            border-radius: 25px;
            border: none;
            cursor: pointer;
            transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
            text-decoration: none; /* Elimină sublinierea */
        }

            .btn-primary:hover {
                transform: scale(1.05);
                background: linear-gradient(to right, #9900cc, #ff66b2);
            }

        /* Fundal roz-mov */
        body {
            background: linear-gradient(to right, #ff99cc, #cc66ff, #9900cc);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            font-family: Arial, sans-serif;
            flex-direction: column;
        }

        /* Footer text */
        .footer-text {
            text-align: center;
            font-size: 1rem;
            color: white;
            padding: 10px 20px;
            background: none;
            margin-top: 40px;
        }

        /* Container pentru butoane */
        .admin-buttons {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
            margin-top: 40px;
        }

            /* Butoane admin */
            .admin-buttons button {
                padding: 12px 30px;
                background: linear-gradient(to right, #ff66b2, #9900cc);
                color: white;
                border-radius: 25px;
                font-size: 1.4rem;
                font-weight: bold;
                border: none;
                cursor: pointer;
                transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
                text-decoration: none;
                width: 250px;
                height: 50px; /* Fixează înălțimea ca la celelalte butoane */
                display: inline-flex;
                align-items: center;
                justify-content: center;
            }

                .admin-buttons button:hover {
                    transform: scale(1.05);
                    background: linear-gradient(to right, #9900cc, #ff66b2);
                }

        /* Stilizare buton Logout */
        .logout-btn {
            padding: 12px 30px;
            background: linear-gradient(to right, #ff66b2, #9900cc); /* Roz-Mov gradient */
            color: white;
            border-radius: 25px;
            font-size: 1.4rem;
            font-weight: bold;
            border: none;
            cursor: pointer;
            transition: transform 0.3s ease-in-out, background 0.3s ease-in-out;
            text-decoration: none;
            margin-top: 20px;
            width: 250px;
            height: 50px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .logout-btn:hover {
                transform: scale(1.05);
                background: linear-gradient(to right, #9900cc, #ff66b2); /* Roz-Mov inverse pe hover */
            }

    </style>
</head>
<body>

    <!-- Bara de navigație -->
    <div class="navbar">
        <a href="/" class="navbar-title">Unde Facem Revelionul?</a>
        <div class="nav-buttons">
            <form asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>
    </div>

    <!-- Conținutul dashboard-ului -->
    <div class="dashboard-container">
        <h1 class="gradient-text">Welcome, @userName!</h1>

        <p>Welcome to your Dashboard, where you can overview the app's logic, edit users and more.</p>

        <div class="admin-buttons">
            <h2>Hi, Admin!</h2>
            <p>Pick a category to overview:</p>
            <button onclick="location.href='@Url.Action("PartiersList", "Admin")'" class="btn btn-primary">Partiers</button>
            <button onclick="location.href='@Url.Action("ProvidersList", "Admin")'" class="btn btn-primary">Providers</button>
            <button onclick="location.href='@Url.Action("PartiesList", "Admin")'" class="btn btn-primary">Parties</button>
            <button onclick="location.href='@Url.Action("LocationsList", "Admin")'" class="btn btn-primary">Locations</button>
            <button onclick="location.href='@Url.Action("MenusList", "Admin")'" class="btn btn-primary">Menus</button>
        </div>
    </div>

    <!-- Footer
    <div class="footer-text">
        © 2024 - UndeFacemRevelionul - <a href="/Privacy">Privacy</a>
    </div>
    -->

</body>
</html>