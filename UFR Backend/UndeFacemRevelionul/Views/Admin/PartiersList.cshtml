<h2>Partiers List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var partier in Model)
        {
            <tr>
                <td>@partier.Name</td>
                <td>@partier.Email</td>
                <td>
                    @if (partier.BlockedUntil != null && partier.BlockedUntil > DateTime.Now)
                    {
                        <button onclick="unblockPartier(@partier.Id)" class="btn btn-success">Unblock</button>
                    }
                    else
                    {
                        <button onclick="blockPartier(@partier.Id)" class="btn btn-danger">Block</button>
                    }
                </td>
                <td>
                    <form action="@Url.Action("DeleteUser", "Admin")" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                        <input type="hidden" name="id" value="@partier.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function blockPartier(id) {
        let hours = prompt("Pentru câte ore vrei să blochezi acest utilizator?");
        if (hours && !isNaN(hours) && hours > 0) {
            // Redirecționează către metoda de blocare
            window.location.href = `/Admin/BlockPartier?id=${id}&hours=${hours}`;
        } else {
            alert("Introduceți un număr valid de ore.");
        }
    }

    function unblockPartier(id) {
        if (confirm("Ești sigur că vrei să deblochezi acest utilizator?")) {
            // Redirecționează către metoda de deblocare
            window.location.href = `/Admin/UnblockPartier?id=${id}`;
        }
    }
</script>
